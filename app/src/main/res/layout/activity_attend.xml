<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:background="#ffffffff"
		android:layout_height="match_parent"
		tools:context=".Attend">
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="300dp"
			android:layout_alignParentBottom="true"
		android:background="@drawable/art2"/>
	
	<TextView android:layout_width="match_parent"
          android:textSize="30dp"
          android:layout_height="wrap_content"
android:id="@+id/coord"/>
	<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:id="@+id/lesson_details"
			app:cardCornerRadius="5dp"
			android:layout_margin="10dp"
			app:cardBackgroundColor="@color/colorAccent"
			>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_margin="5dp"
				android:background="#A8E91E63"
				android:orientation="vertical"
				android:layout_height="match_parent">
			<TextView
					android:layout_width="match_parent"
					android:textSize="20dp"
					android:id="@+id/unitName"
					android:overScrollMode="ifContentScrolls"
					android:textColor="#fff"
					android:layout_marginTop="20dp"
					android:textAllCaps="true"
					android:layout_height="wrap_content"
					android:text="Micro-economics"
					android:textAlignment="center"/>
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="SC-01"
					android:id="@+id/venue"
					android:textAlignment="center"
					android:layout_marginTop="10dp"
					android:textColor="#e2FFFFFF"/>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
	<Button
			android:layout_width="wrap_content"
			android:background="@drawable/white_btn_background"
			android:layout_below="@id/lesson_details"
			android:layout_centerHorizontal="true"
			android:paddingLeft="12dp"
			android:textStyle="bold"
			android:onClick="SignIn"
			android:fontFamily="sans-serif-black"
			android:textColor="@color/colorAccent"
			android:clickable="true"
			android:foreground="?android:attr/selectableItemBackground"
			android:paddingRight="12dp"
			android:layout_margin="10dp"
			android:id="@+id/signInbtn"
			android:text="Sign in Attendance"
			android:layout_height="wrap_content"/>
	<ProgressBar
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_below="@id/signInbtn"
			android:id="@+id/progressAttend"
			android:layout_centerHorizontal="true"/>
	<ProgressBar
			android:layout_width="30dp"
			android:layout_below="@id/signInbtn"
			android:layout_height="30dp"
			android:id="@+id/progressLocation"
			android:layout_centerHorizontal="true"/>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_below="@id/progressAttend"
			android:orientation="vertical"
			android:layout_marginTop="20dp"
			android:visibility="gone"
			android:id="@+id/errorPane"
			android:layout_height="wrap_content">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_margin="10dp"
				android:text="Could not load details from server"/>
		<Button
				android:layout_width="wrap_content"
				android:paddingRight="20dp"
				android:paddingLeft="20dp"
				android:layout_gravity="center_horizontal"
				android:onClick="Retry"
				android:background="@drawable/white_btn_background"
				android:text="Try again"
				android:layout_height="wrap_content"/>
	</LinearLayout>
</RelativeLayout>